<h1 style="margin: 20px;">Welcome</h1>
{{#if companies}}
<h1>List Of Companies</h1>
  <table class='table table-striped table-responsive'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      {{#each companies}}
      <tr>
        <td><a href='{{constructRedirect}}'>{{this.name}}</a></td>
        <td>{{this.category}}</td>
        <td>{{this.location}}</td>
      </tr>
    </tbody>
    {{/each}}
  </table>
  {{else}}
  <h3>No Companies have been created yet</h3>
  {{/if}}