<form action='/createEmployment' method='POST' class='my-4 form-inline'>

    <div class='form-group'>
        <label for='Name' class='sr-only'>Name</label>
        <input required placeholder='Enter the Name' name='name' id='name' class='form-control col mr-2'>
    </div>

    <div class='form-group'>
        <label for='Category' class='sr-only'>Category</label>
        <input required placeholder='Enter the Category' name='category' id='category' class='form-control col mr-2'>
    </div>

    <div class='form-group'>
        <label for='Location' class='sr-only'>Location</label>
        <input required placeholder='Enter the Location' name='location' id='location' class='form-control col mr-2'>
    </div>

    <div class='form-group'>
        <label for='JoiningDate' class='sr-only'>JoiningDate</label>
        <input required placeholder='Enter the Joining Date' type='date' name='joiningDate' id='joiningdate' class='form-control col mr-2'>
    </div>

    <div class='form-group'>
        <label for='LeavingDate' class='sr-only'>LeavingDate</label>
        <input required placeholder='Enter the Leaving Date' type='date' name='leavingDate' id='leavingdate' class='form-control col mr-2'>
    </div>
    
    <button class='btn btn-success' type='submit'>Create New</button>
</form>